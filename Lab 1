import math

def check_type():
    value = input("Enter any value: ")
    try:
        # Try to evaluate if it is number
        evaluated = eval(value)
        print("Type of variable:", type(evaluated))
    except:
        print("Type of variable:", type(value))   # string by default

def add_numbers():
    a = int(input("Enter first integer: "))
    b = int(input("Enter second integer: "))
    print("Sum of two integers:", a + b)

    c = int(input("Enter an integer: "))
    d = float(input("Enter a float value: "))
    print("Sum of integer and float:", c + d)

    str1 = input("Enter first string: ")
    str2 = input("Enter second string: ")
    print("Concatenation of strings:", str1 + " " + str2)

def swap_numbers():
    a = int(input("Enter first number: "))
    b = int(input("Enter second number: "))
    print("Before swap: a =", a, "b =", b)
    a, b = b, a
    print("After swap: a =", a, "b =", b)

def variable_names():
    swap = int(input("Enter value for variable 'swap': "))
    Swap = int(input("Enter value for variable 'Swap': "))
    SWAP = int(input("Enter value for variable 'SWAP': "))
    print("swap =", swap, ", Swap =", Swap, ", SWAP =", SWAP)

def arithmetic_operations():
    x = int(input("Enter first number: "))
    y = int(input("Enter second number: "))
    print("Addition:", x + y)
    print("Subtraction:", x - y)
    print("Multiplication:", x * y)
    if y != 0:
        print("Division:", x / y)
        print("Modulus:", x % y)
    else:
        print("Division and modulus not possible (denominator is 0)")

def circle_area_circumference():
    r = float(input("Enter radius of circle: "))
    area = math.pi * r * r
    circumference = 2 * math.pi * r
    print("Area of circle:", area)
    print("Circumference of circle:", circumference)

# Menu-driven loop
while True:
    print("\n--- MENU ---")
    print("1. Check type of variables")
    print("2. Add numbers and strings")
    print("3. Swap two numbers")
    print("4. Define variable names")
    print("5. Arithmetic operations")
    print("6. Area and circumference of circle")
    print("7. Exit")

    choice = int(input("Enter your choice: "))

    if choice == 1:
        check_type()
    elif choice == 2:
        add_numbers()
    elif choice == 3:
        swap_numbers()
    elif choice == 4:
        variable_names()
    elif choice == 5:
        arithmetic_operations()
    elif choice == 6:
        circle_area_circumference()
    elif choice == 7:
        print("Exiting program. Goodbye!")
        break
    else:
        print("Invalid choice! Please try again.")