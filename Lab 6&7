def calculate_bill():
    # Input 4 item prices
    prices = []
    for i in range(1, 5):
        price = float(input(f"Enter price of item {i}: ₹"))
        prices.append(price)

    # Subtotal
    subtotal = sum(prices)
    print(f"\nSubtotal: ₹{subtotal:.2f}")

    # Apply discount if > 1000
    if subtotal > 1000:
        discount = 0.10 * subtotal
    else:
        discount = 0

    discounted_subtotal = subtotal - discount
    print(f"Discount Applied: ₹{discount:.2f}")
    print(f"Subtotal after Discount: ₹{discounted_subtotal:.2f}")

    # GST 12%
    gst = 0.12 * discounted_subtotal
    print(f"GST (12%): ₹{gst:.2f}")

    # Grand Total
    grand_total = discounted_subtotal + gst
    print(f"Grand Total: ₹{grand_total:.2f}\n")


# Menu-driven program
while True:
    print("------ Shopping Bill Menu ------")
    print("1. Calculate Shopping Bill")
    print("2. Exit")

    choice = input("Enter your choice (1/2): ")

    if choice == "1":
        calculate_bill()
    elif choice == "2":
        print("Thank you for shopping with us!")
        break
    else:
        print("Invalid choice! Please try again.\n")
